mixin decision_row(decision)
  tr
    each value, aspect in decision
      td(data-aspect-value="#{value}", class="decision_#{value}")= helpers.sanitizeVariableName((aspect==="trader")?value:aspect)

- if (decisions.buy_decisions && decisions.buy_decisions.length)
  h3 Current buy decisions
  table#buy-decision-indicators.decision-table
    each decision in decisions.buy_decisions
      mixin decision_row(decision)  
- if (decisions.sell_decisions && decisions.sell_decisions.length)
  h3 Current sell decisions
  table#sell-decision-indicators.decision-table
    each decision in decisions.sell_decisions
      mixin decision_row(decision)