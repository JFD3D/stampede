h3 Current data
- if (current_market.error)
  p(class="error")= current_market.error
table.table.table-striped
  tr
    th Last
    th High
    th Threshold
    th Middle
    th Low
    th Spread
  tr
    td#current-last-price= current_market.last.toFixed(2)
    td= current_market.high.toFixed(2)
    td= current_market.threshold.toFixed(2)
    td= current_market.middle.toFixed(2)
    td= current_market.low.toFixed(2)
    td= (current_market.spread*100).toFixed(2)+"%"
h3 Calculations
table.table.table-striped
  tr
    th EMA
    th Momentum average
    th Momentum time span
    th Momentum healthy
    th Updated at
  tr
    td= current_market.EMA.toFixed(2)
    td= current_market.momentum_average.toFixed(5)
    td= ((current_market.momentum_time_span||0) / 1000).toFixed(3) + "s"
    td= current_market.momentum_record_healthy ? "Yes" : "No"
    td= formatter.tFormat(current_market.time)
- if (current_market.simulation_progress)
  #live-simulation-progress
    h3 Simulation progress
    .progress
      .progress-bar(role="progressbar", aria-valuenow="#{parseInt(current_market.simulation_progress * 100)}", aria-valuemin="0", aria-valuemax="100", style="width: #{parseInt(current_market.simulation_progress * 100)}%")
        span.sr-only 40% Complete (success)