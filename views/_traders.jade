- var trader_count = Object.keys(traders).length
- var currency_label = helpers.current_currency.toUpperCase()

- if (trader_count)
  each trader, trader_name in traders
    .trader.col-md-5(id="#{formatter.standardize(trader_name)}")
      .spacer
      p
        b #{'T' + trader_name.split('_')[1] || ''}
        span  at average buy price
        b  #{trader.average_buy_price ? trader.average_buy_price.toFixed(2) : 0} #{currency_label}
        span  | 
        a.removal(href="#", data-trader="#{trader_name}") Remove trader
      span
      - if (trader.purchases || trader.sales || trader.profit)
        h3 Trading overview
        table.table.table-striped
          tr
            th Type
            th Number
            th Volume #{currency_label}
            th Volume BTC
          tr
            td Purchases
            td #{trader.purchases}
            td #{trader.purchases_amount_currency.toFixed(2)}
            td #{trader.purchases_amount_btc.toFixed(5)}
          tr
            td Sales
            td #{trader.sales}
            td #{trader.sales_amount_currency.toFixed(2)}
            td #{trader.sales_amount_btc.toFixed(5)}

- else
  .col-md-5
    h3 No traders added.