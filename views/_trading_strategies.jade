form#trading-strategy-form.async-form(action="/trading_strategy/update", method="post")
  mixin strategy_form_inputs(trading_strategies)
  .spacer
  button.btn.btn-default Submit changes

mixin strategy_form_inputs(strategy_set)
  table
    each enabled, strategy in strategy_set
      tr
        td 
          label(for="#{strategy}-input") 
            b #{helpers.sanitizeVariableName(strategy)}
        td
          input(type="checkbox", name="#{strategy}", checked=(enabled?"checked":undefined))