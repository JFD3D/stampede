extends layout

block content
  h1 Data loader
  p.small Load data from bitcoincharts.com and save them as a reusable dataset for simulation

  form(action="/load_trade_history", method="post")
    label Time span in days
      .clearer
      input.form-control(type="text", name="day_span", value="90")
    .clearer
    label Custom data set name
      .clearer
      input.form-control(type="text", name="set_name", placeholder="Name your data set...")
    .clearer
    button.btn.btn-default(type="submit") Submit