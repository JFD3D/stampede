doctype 5
html
  head
    title= title

    // Favicon
    link#stampede-favicon(href="/images/favicon.ico", rel="shortcut icon", type="image/x-icon")

    // Base CSS
    link(rel='stylesheet', href='/stylesheets/style.css')
    
    // External libraries
    script(type='text/javascript', src='/javascripts/jquery-2.1.0.min.js')

    // D3 visualization
    script(type='text/javascript', src='/javascripts/d3.min.js')

    // Live scripts
    script(type='text/javascript', src='/socket.io/socket.io.js')
    
    // Custom local scripts
    script(type='text/javascript', src='/javascripts/front.js')    
    
    block head

  body
    #navigation
      block navigation
    .clearer
    #content
      block content
